<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Savings Calculator</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .input-group {
            margin-bottom: 20px;
        }
        .input-group input {
            margin: 5px;
            padding: 5px;
        }
        .chart-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="input-group">
            <input id="initialAmount" type="number" step="0.01" placeholder="Initial Amount ($)">
            <input id="monthlySavings" type="number" step="0.01" placeholder="Monthly Savings ($)">
            <input id="interestRate" type="number" step="0.01" placeholder="Annual Interest Rate (%)">
            <input id="targetAmount" type="number" step="0.01" placeholder="Target Amount ($)">
            <button onclick="calculate()">Calculate</button>
        </div>
        <div class="chart-container">
            <canvas id="myChart"></canvas>
        </div>
    </div>

    <script src="js/main.js"></script>

    <!-- Google Ads Script -->
